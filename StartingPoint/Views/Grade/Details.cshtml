@model StartingPoint.Models.Grade
@{
    ViewData["Title"] = "Details";
}


<div class="row">
    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="GradeId" />
        <div class="form-group">
            <label asp-for="GradeId" class="control-label small"></label>
            <input asp-for="GradeId" class="form-control form-control-sm" />
            <span asp-validation-for="GradeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GradeName" class="control-label small"></label>
            <input asp-for="GradeName" disabled class="form-control form-control-sm" />
            <span asp-validation-for="GradeName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Section" class="control-label small"></label>
            <input asp-for="Section" disabled class="form-control form-control-sm" />
            <span asp-validation-for="Section" class="text-danger"></span>
        </div>
        <div class="form-group">            
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
        </div>

    </form>
</div>





