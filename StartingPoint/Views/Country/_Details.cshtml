
@model StartingPoint.Models.CountryViewModel.CountryCRUDViewModel

@{
    ViewData["Title"] = "Details";
}

<div calss="row">
    <form asp-action="Details">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />
        <div class="form-group">
            <label asp-for="CountryId" class="control-label small"></label>
            <input asp-for="CountryId" disabled class="form-control form-control-sm" />
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label small"></label>
            <input asp-for="Description" disabled class="form-control form-control-sm" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="small">Created by</label>
            <input asp-for="CreatedBy" disabled class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label class="small">Created Date</label>
            <input asp-for="CreatedDate" disabled class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label class="small">Modified by</label>
            <input asp-for="ModifiedBy" disabled class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label class="small">Modified Date</label>
            <input asp-for="ModifiedDate" disabled class="form-control form-control-sm" />
        </div>

        <div class="form-group">            
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
        </div>

    </form>
</div>

