@model StartingPoint.Models.MaterialGroupViewModel.MaterialGroupCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div calss="row">
    <form asp-action="AddEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="MaterialGroupId" class="control-label small"></label>
                <input asp-for="MaterialGroupId" readonly="true" class="form-control form-control-sm" />
                <span asp-validation-for="MaterialGroupId" class="text-danger"></span>               
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ServiceId" class="control-label small"></label>                 
                     <select asp-for="ServiceId" asp-items="@ViewBag._LoadddlService" id="ServiceId" class="form-control-sm" style="width:100%;">
                         <option disabled selected>--- SELECT ---</option>
                         <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </select>                 
            </div>            
        </div>
        <div class="form-row">
             <div class="form-group col">
                 <label asp-for="Description" class="control-label small"></label>
                 <input asp-for="Description" class="form-control form-control-sm" />
                 <span asp-validation-for="Description" class="text-danger"></span> 
            </div>
        </div>     
       
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info btn-sm">
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>


<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
