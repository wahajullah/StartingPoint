@model StartingPoint.Models.Enquiry
@{
    ViewData["Title"] = "Details";
}


<div calss="row">
        <form asp-action="AddEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />@*
            <input type="hidden" asp-for="GradeName" />
            <input type="hidden" asp-for="Section" />*@
            <div class="form-row">
            <div class="form-group col-md-6" >
                <label asp-for="Code" class="control-label "></label>
                <input asp-for="Code" readonly="true" class="form-control form-control-sm" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Project" class="control-label" ></label>
                <input asp-for="Project" class="form-control form-control-sm" />
                <span asp-validation-for="Project" class="text-danger"></span>
            </div>
            
            <div class="form-group col-md-6">
                <label asp-for="Location" class="control-label" ></label>
                <input asp-for="Location" class="form-control form-control-sm" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="MainContract" class="control-label" ></label>
                <input asp-for="MainContract" class="form-control form-control-sm" />
                <span asp-validation-for="MainContract" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Consultant" class="control-label" ></label>
                <input asp-for="Consultant" class="form-control form-control-sm" />
                <span asp-validation-for="Consultant" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Client" class="control-label" ></label>
                <input asp-for="Client" class="form-control form-control-sm" />
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Service" class="control-label" ></label>
                <input asp-for="Service" class="form-control form-control-sm" />
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>
            
            <div class="form-group col-md-12">
                @{
                 if (@Model.Status.ToString() == "Pending") {  <a style='font-weight: 800; color: blue;'>Pending</a> }
                        else if (@Model.Status == "Reject") {  <a style='font-weight: 800; color: Red;'>Reject</a> }
                        else if (@Model.Status == "Approved") {  <a style='font-weight: 800; color: Green;'>Approved</a> }
                      } 
                </div>
            <div class="form-group col-md-12">
                <label asp-for="Remarks" class="control-label" ></label>
                <textarea asp-for="Remarks" class="form-control form-control-sm" ></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            
            </div>
    
        <div class="form-group">            
            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
        </div>

    </form>
</div>





