
@model StartingPoint.Models.LineItems

@{
    ViewData["Title"] = "Create";
}

    <div calss="row">
        <form asp-action="AddEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />@*
            <input type="hidden" asp-for="GradeName" />
            <input type="hidden" asp-for="Section" />*@
            <div class="form-group" style="display:none">
                <label asp-for="Id" class="control-label small"></label>
                <input asp-for="Id" readonly="true" class="form-control form-control-sm" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortText" class="control-label" small></label>
                <input asp-for="ShortText" class="form-control form-control-sm" />
                <span asp-validation-for="ShortText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label" small></label>
                <input asp-for="Description" class="form-control form-control-sm" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label" small></label>                 
                     <select asp-for="GroupId" ondurationchange="abc"  asp-items="@ViewBag._LoadddlService" id="ServiceId" class="form-control-sm" style="width:100%;">
                         <option disabled selected>--- SELECT ---</option>
                         <span  asp-validation-for="GroupId" class="text-danger"></span>
                    </select>                
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info btn-sm">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>    


<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


