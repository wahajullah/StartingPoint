@model StartingPoint.Models.ApplicationUser;
@inject StartingPoint.Data.ApplicationDbContext context;
@inject StartingPoint.Services.IRoles _roles;

@using Microsoft.Extensions.Options;
@inject IOptions<StartingPoint.Models.CommonViewModel.ApplicationInfo> _ApplicationInfo;

@{
    UserProfile profile = context.UserProfile.SingleOrDefault(x => x.ApplicationUserId.Equals(Model.Id));
    var _MainMenuViewModel = await _roles.RolebaseMenuLoad(Model.Id);

    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="@Url.Action("Index", "Dashboard")" class="brand-link">
            <img src='~/images/StartingPoint.png' alt="AdminLTE Logo" class="brand-image img-circle elevation-3">
            <span class="brand-text font-weight-light">@_ApplicationInfo.Value.Name</span>
        </a>

        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="@profile.ProfilePicture" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="@Url.Action("Index", "UserProfile")" class="d-block">
                        @profile.FirstName @profile.LastName
                    </a>
                </div>
            </div>

            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                    @if (_MainMenuViewModel.Asset)
                    {
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-box-open"></i>
                                <p>
                                    Manage Asset
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @if (_MainMenuViewModel.Asset)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.Asset.Path" class="nav-link">
                                            <i class="nav-icon fas fa-box"></i>
                                            <p>@MainMenu.Asset.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AssetHistory)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetHistory.Path" class="nav-link">
                                            <i class="nav-icon fas fa-history"></i>
                                            <p>@MainMenu.AssetHistory.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AssetCategorie)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetCategorie.Path" class="nav-link">
                                            <i class="nav-icon fas fa-object-group"></i>
                                            <p>@MainMenu.AssetCategorie.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AssetSubCategorie)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetSubCategorie.Path" class="nav-link">
                                            <i class="nav-icon fas fa-id-card"></i>
                                            <p>@MainMenu.AssetSubCategorie.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AssetStatus)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetStatus.Path" class="nav-link">
                                            <i class="nav-icon fas fa-id-card"></i>
                                            <p>@MainMenu.AssetStatus.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.Comment)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.Comment.Path" class="nav-link">
                                            <i class="nav-icon fas fa-comment"></i>
