                                        <a href="@MainMenu.LoginHistory.Path" class="nav-link">
                                            <i class="nav-icon fas fa-history"></i>
                                            <p>@MainMenu.LoginHistory.PageName</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }

                    @if (_MainMenuViewModel.AssetStatusReport)
                    {
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-database"></i>
                                <p>
                                    Report
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @if (_MainMenuViewModel.AssetStatusReport)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetStatusReport.Path" class="nav-link">
                                            <i class="nav-icon fas fa-list"></i>
                                            <p>@MainMenu.AssetStatusReport.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AssetAllocationReport)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AssetAllocationReport.Path" class="nav-link">
                                            <i class="nav-icon fas fa-table"></i>
                                            <p>@MainMenu.AssetAllocationReport.PageName</p>
                                        </a>
                                    </li>
                                }
                                @if (_MainMenuViewModel.AddressType)
                                {
                                    <li class="nav-item">
                                        <a href="@MainMenu.AddressType.Path" class="nav-link">
                                            <i class="nav-icon fas fa-table"></i>
